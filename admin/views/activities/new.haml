%ul.nav.nav-tabs
  %li=link_to tag_icon(:list, pat(:list)), url(:activities, :index)
  %li.active=link_to tag_icon(:plus, pat(:new)), url(:activities, :new)

.tabs-content
  = form_for :activity, url(:activities, :create), :class => 'form-horizontal' do |f|
    =partial 'activities/form', :locals => { :f => f }
